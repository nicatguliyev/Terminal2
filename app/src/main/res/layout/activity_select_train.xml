<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectTrain">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gediş tarixi:"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tripDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt"
        android:layout_marginLeft="12dp"
        android:layout_alignBottom="@+id/txt"
        android:textSize="16sp"
        android:text="--------------"
        android:textColor="#0EE415"
        android:textStyle="bold|italic"/>


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txt"
        android:background="@drawable/spinner_background"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">
    </Spinner>


    <Spinner
    android:id="@+id/spinner3"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/spinner1"
    android:layout_marginLeft="16dp"
    android:background="@drawable/spinner_background"
    android:layout_marginRight="16dp"
    android:layout_marginTop="20dp">

</Spinner>

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner3"
        android:layout_marginLeft="16dp"
        android:background="@drawable/spinner_background"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">

    </Spinner>



    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/nextBtn"
        android:layout_below="@id/spinner4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="İRƏLİ"
        android:textColor="#fff"
        android:background="@drawable/buttton_background"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextBtn"
        android:background="#32FFC107"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
            android:text="İnternetə bağlantıda problem var."/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:text="Yenidən yoxlayın"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/reload_icon"/>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>