<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train2"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3000000">


        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/userEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/logoImg"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edittext_background"
            android:hint="İstifadəçi"
            android:drawablePadding="12dp"
            android:singleLine="true"
            android:text=""
            android:nextFocusDown="@id/passEdt"
            android:drawableLeft="@drawable/ic_username"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/passEdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/userEdt"
            android:layout_marginTop="16dp"
            android:drawablePadding="16dp"
            android:text=""
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/ic_password"
            android:textColor="#000000"
            android:hint="Şifrə" />


        <Button
            android:id="@+id/loginBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Daxil ol"
            android:layout_below="@id/passEdt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttton_background"
            android:textColor="#ffffff"/>


    </RelativeLayout>

</RelativeLayout>